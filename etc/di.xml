<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
	<preference for="Magento\Framework\Mail\Template\TransportBuilder" type="Ziffity\ProductAttachments\Model\Mail\Template\TransportBuilder"/>
	
	<preference for="Ziffity\ProductAttachments\Api\Data\FileInterface" type="Ziffity\ProductAttachments\Model\File" />
	<virtualType name="ZiffityAttachmentsGridFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
		<arguments>
			<argument name="appliers" xsi:type="array">
				<item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
				<item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
			</argument>
		</arguments>
	</virtualType>
	<virtualType name="ZiffityAttachmentsGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
		<arguments>
			<argument name="collection" xsi:type="object" shared="false">Ziffity\ProductAttachments\Model\ResourceModel\File\Collection</argument>
			<argument name="filterPool" xsi:type="object" shared="false">ZiffityAttachmentsGridFilterPool</argument>
		</arguments>
	</virtualType>
	<virtualType name="Ziffity\ProductAttachments\Model\ResourceModel\File\Grid\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
		<arguments>
			<argument name="mainTable" xsi:type="string">product_attachments_files</argument>
			<argument name="resourceModel" xsi:type="string">Ziffity\ProductAttachments\Model\ResourceModel\File</argument>
		</arguments>
	</virtualType>
	<type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
		<arguments>
			<argument name="collections" xsi:type="array">
				<item name="zy_attachments_files_data_source" xsi:type="string">Ziffity\ProductAttachments\Model\ResourceModel\File\Grid\Collection</item>
			</argument>
		</arguments>
	</type>
</config>
